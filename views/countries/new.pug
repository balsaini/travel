extends ../shared/template
block content
  h1 Create a new country
  table
    tr
      td
        form(action='/countries', method='post').formTopPad
          .form-group
            label.createLabelWidth Name:
            input#countryName(type='text', name='name').createControlWidth
          .form-group
            label.createLabelWidth Photos:
            input#countryPhotos(type='text', name='photos').createControlWidth
          .form-group
            button.btn.btn-final(type='submit') Submit
